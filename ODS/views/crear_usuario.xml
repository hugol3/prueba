<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.ui.view" id="usuario_form">
        <field name="name">Usuario</field>
        <field name="model">usuario.model</field>
        <field name="priority" eval="16"></field>
        <field name="arch" type="xml">
            <form>
                <sheets>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="correo"/>
                        </group>
                    </group>
                </sheets>
            </form>
        </field>
    </record>

    <record id="action_usuario" model="ir.actions.act_window">
        <field name="name">Usuario</field>
        <field name="name">ir.actions.act_window</field>
        <field name="name">usuario.model</field>
        <field name="name">tree,form</field>
    </record>

    <menuitem id="menu_usuarios" name="id" sequence="10"/>

</odoo>



