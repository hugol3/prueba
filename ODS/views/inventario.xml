<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_inventario_form" model="ir.ui.view">
            <field name="name">inventario</field>
            <field name="model">inventario.model</field>
            <field name="arch" type="xml">
                <form string="inventario">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="img" widget="image" class="oe_avatar" options="{&quot;placeholder&quot;: &quot;avatar_128&quot;}" on_change="1"/>
                        </div>
                        <group>
                            <field name="nombre" widget="phone"/>
                            <field name="id_usuario" on_change="1" modifiers="{&quot;invisible&quot;: true}"/>
                            <field name="cantidad" modifiers="{&quot;invisible&quot;: true, &quot;readonly&quot;: true}"/>
                            <field name="id_categoria" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="e.g. &quot;B2B&quot;, &quot;VIP&quot;, &quot;Consulting&quot;, ..." can_create="true" can_write="true"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>


