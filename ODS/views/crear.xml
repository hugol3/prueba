<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_usuario_model" model="ir.actions.act_window">
        <field name="name">Usuarios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">usuario.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="usuario_form">
        <field name="name">Usuario</field>
        <field name="model">usuario.model</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <sheets>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="correo"/>
                        </group>
                    </group>
                </sheets>
            </form>
        </field>
    </record>    


    <menuitem id="menu_usuarios" name="Usuarios" parent="menu_inventario_root" action="action_usuario_model" sequence="10"/>


</odoo>



