<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de lista (tree view) -->
        <record id="view_productos_tree" model="ir.ui.view">
            <field name="name">productos</field>
            <field name="model">inventario.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" />
                    <field name="nombre" />
                    <field name="cantidad" />
                    <field name="id_categoria" />
                    <button name="unlink" string="Eliminar" type="object" class="oe_highlight" confirm="¿Estás seguro de que deseas eliminar el registro?" />
                    <button name="redireccionar" string="Editar" type="object"/>
                </tree>
            </field>
        </record>

        <record id="view_producto_form" model="ir.ui.view">
            <field name="name">Nuevo Producto</field>
            <field name="model">inventario.model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="cantidad"/>
                            <field name="id"/>
                            <field name="id_categoria" />
                            <field name="fecha_recibido" />
                            <field name="fecha_caducidad" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>


